        <button class="btn bg-white dashboard-sidebar-btnText mx-auto mt-3 mb-0 pb-0 dashboard-sidebar-secondaryBtn">subscriber email</button><hr class="m-0">
        <a href="/admin/logout" class="text-decoration-none"><button class="btn bg-dark text-light dashboard-sidebar-btnText mx-auto mt-auto mb-4 px-5 py-0 dashboard-sidebar-mainBtn dashboard-sidebar-logoutbtn">Log out</button></a>
    </div>
    <div class="container-fluid col-10 row-1">
        <div class="col-12 bg-white dashboard-searchbar m-3 p-0">
            <div class="input-group m-0 h-100 w-100">
                <form id="search_form" class="p-0 m-0 border bg-white border-0 w-75" name="Searchform" action="#" method="POST">
                    <div class="input-group-prepend bg-white">
                        <span class="input-group-text bg-white border-0" id="basic-addon1"><img src="/assets/search-solid.svg" class="img-fluid dashboard-searchbar-icon" alt="search icon"></span>
                        <input type="text" class="form-control border-0 dashboard-searchbar-input font-secondary" placeholder="SEARCH" aria-label="Username" aria-describedby="basic-addon1" style="outline: none !important;">
                    </div>
                </form>
                <span class="font-secondary dashboard-searchbar-text ml-auto mr-3">Regina Pinheiro</span>
            </div>
        </div>
        <div class="col-12 bg-ivory dashboard-titlebar m-3">
            <span class="dashboard-titlebar-text px-2 font-secondary">upload blog</span>
        </div>
        <div class="col-12 bg-white m-3 h-auto">
            <form id="form-blogUpload" class="p-4 m-0 mb-5 border bg-white border-0 w-75 float-left h-auto" name="blogUpload" action="/adminFormHandling/upload-blog" method="POST"  enctype="multipart/form-data">
                <%- include ('./partials/messages') %>
                <div class="form-group p-2">
                    <label for="blogUpload-title">title</label>
                    <input id="blogUpload-title" class="form-control" name="blog_title" type="text">
                </div>
                <div class="form-group p-2">
                    <label>image</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile" name="blog_image">
                        <label class="custom-file-label px-2" for="customFile">Choose file</label>
                    </div>
                </div>
                <div class="form-row p-2">
                    <div class="form-group col">
                        <label for="blogUpload-primaryTag">Primary Tag</label>
                        <select id="blogUpload-primaryTag" class="form-control" name="blog_primaryTag">
                            <option class="" value="Nutrition">Nutrition</option>
                            <option class="" value="Healthcare">Healthcare</option>
                            <option class="" value="Events">Events</option>
                            <option class="" value="Recipies">Recipies</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label>Secondary Tag</label>
                        <input id="blogUpload-secondaryTag" class="form-control" name="blog_secondaryTag" type="text">
                    </div>
                </div>   
                <div class="form-group p-2">
                    <label for="blogUpload-body">body</label>
                    <textarea id="blogUpload-body" class="form-control" name="blog_body"></textarea>
                </div>   
                <input class="btn btn-dark text-light font-secondary float-right px-4 m-2" type="submit" value="Upload">          
            </form>
        </div>
    </div>
</div>


